@model MUE.Web.EntitiesDTO.UserDTO.CreateUserDTO

@{
    ViewBag.Title = "Register";
}

<h2>Регистрация</h2>

<div class="col-md-offset-4">
    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        <div class="form-group">
            <div class="col-md-10">
                <label>Логин</label>
                @Html.TextBoxFor(m => m.Login, new { @class = "form-control", @placeholder = "Логин" })
                @Html.ValidationMessageFor(m => m.Login)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <label>Пароль</label>
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Пароль" })
                @Html.ValidationMessageFor(m => m.Password)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <label>Повторите пароль</label>
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Пароль" })
                @Html.ValidationMessageFor(m => m.ConfirmPassword)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2">
                <input type="submit" value="Подтвердить" class="btn btn-primary" />
            </div>
        </div>
    }
</div>
