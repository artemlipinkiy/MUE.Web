@model IEnumerable<MUE.Web.EntitiesDTO.UserDTO.OwnerDTO>

@{
    ViewBag.Title = "SelectOwner";
}

<h2>Выбрать владельца</h2>
@if (ViewBag.HasOwner)
{
    @Html.ActionLink("Удалить владельца", "DeleteOwner", new { FlatId = ViewBag.FlatId })
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.OwnerId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MiddlleName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OwnerId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MiddlleName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.ActionLink("Выбрать", "ConfirmOwner", new { OwnerId = item.OwnerId, FlatId = ViewBag.FlatId })  |
            </td>
        </tr>
    }

</table>
